{
  "manifest_version": 3,
  "name": "Echo",
  "version": "1.0.0",
  "description": "Developer tool for debugging and sharing network requests",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "dashboard.js"],
      "matches": ["<all_urls>"]
    }
  ]
}